{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inscription</h1>
    {{ form_start(form) }}

    {{ form_row(form.username,{'label': 'Nom d\'utilisateur', 'attr': {'placeholder': 'Nom d \'utilisateur ! '}}) }}
    {{ form_row(form.email,{'label': 'Adresse mail', 'attr': {'placeholder': 'Adresse mail ! '}}) }}
    {{ form_row(form.password,{'label': 'Mot de passe', 'attr': {'placeholder': 'Mettre mot de passe ! '}}) }}
    {{ form_row(form.confirm_password,{'label': 'Confirmer le mot de passe', 'attr': {'placeholder': 'Mettre de nouveau le mot de passe ! '}}) }}
    <button type="submit" class="btn btn-primary">Inscription !</button>
    {{ form_end(form) }}
{% endblock %}